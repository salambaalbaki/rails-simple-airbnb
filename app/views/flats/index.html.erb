<h1>All our Flats (<%= @flats.count %>)</h1>

<% @flats.each do |flat| %>
  <p><strong><%= flat.name %> </strong></p>
  <p><%= flat.address %></p>
  <p><%= flat.number_of_guests %></p>
  <p>$<%= flat.price_per_night %></p>
  <%= link_to "More info", flat_path(flat) %>
  <br>
  <br>
  <hr>
<% end %>
